{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "C++ MAIN BUILD RUNNER",
        "command": "D:\\bin\\g++.exe",
        "args": ["-g", "${file}", "-o", "${fileDirname}\\${fileBasenameNoExtension}.exe"],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }